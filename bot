import telebot
from bot_token import TOKEN

bot = telebot.TeleBot(TOKEN)


@bot.message_handler(commands=['start'])
def start(message):
    sent = bot.send_message(message.chat.id, '''Добрый день! Это бот компании «Специальный технологический центр».
    \nОзнакомиться с основной информацией о компании можно по ссылке на нашем сайте (https://www.stc-spb.ru/).
    \nРекомендуем подписаться на наш телеграм-канал (https://t.me/stc_vesti ), там можно узнать свежие новости предприятия.
    \nС дополнительной информацией можете ознакомиться через меню.''')
   # reply_markup=keyboard)

@bot.message_handler(func=lambda message: True)
def echo_message(message):
    if message.text == '/documents':
        bot.send_message(message.chat.id,
        '''Перечень оригиналов документов, которые необходимо будет принести нам для оформления в первый рабочий день:
        \n1. Трудовая книжка или справка о ведении электронной трудовой книжки (если вы на нее перешли).
        \n2. Паспорт.
        \n3. СНИЛС.
        \n4. ИНН.
        \n5. Документы об образовании.
        \n6. Военный билет.
        \n7. Свидетельство о браке/рождении детей.
        \n8. Реквизиты зарплатной карты (если у вас СБЕРБАНК). Не обязательно. Оформить зарплатную карту можно и у нас.
        \n9. Справка 182н с предыдущего места работы (для оформления больничных).
        \nСправку 182н и справку о ведении электронной трудовой книжки вам должны выдать на предыдущем месте работы.
        ''')

    elif message.text == '/dms':
        bot.send_message(message.chat.id,'Услуги ДМС для работников оказывает страховая компания «Капитал-полис». '
                                         'Всем сотрудникам, прошедших испытательный срок, предоставляется ДМС. '
                                         'Также сотрудники компании могут увеличить пакет ДМС и/или подключить страхование родственников.')

    elif message.text == '/sport':
        bot.send_message(message.chat.id, 'После полгода работы сотрудник может компенсировать 50% от стоимости абонемента, но не более 20 тыс. рублей.')

    elif message.text == '/corp':
        bot.send_message(message.chat.id, 'Мы поддерживаем корпоративный спорт: постоянно играем в волейбол, футбол, большой и настольный теннис. '
                                          'Также участвуем в квизах и внешних спортивных мероприятиях. Расписание можно посмотреть на портале СТЦ. ')

    elif message.text == '/money':
        bot.send_message(message.chat.id,'''Материальная помощь предоставляется работнику: 
            \n•	При рождении/ усыновлении ребенка/ оформлении опекунства (единовременно, но не более 50 000 за каждого ребенка);
            \n•	В связи соо смертью члена (членов) его семьи (единовременно, но не более 35 000);
            \n•	Родственникам работника в случае его смерти (единовременно, но не более 50 000);
            \n•	В случае повреждения или утраты личного имущества в результате чрезвычайных обстоятельств (единовременно, не более 50 000);
            \n•	В связи с заключением контракта с Министерством обороны России (единовременно, не более 250 000);
            \n•	В случае заболевания (не более 500 000);
            \n•	К ежегодному основному оплачиваемому отпуску (не более 10 000 в год, категория «рабочий»);
            \n•	Для подготовки школьников в первый класс (не более 5 000).''')


    elif message.text == '/children':
       bot.send_message(message.chat.id,'''Предприятие поддерживает семьи сотрудников, в том числе и в вопросах детства. Работнику полагается:
            \n•	Компенсация 50% стоимости путевки (но не более 10 000 в год на каждого ребенка) в детские санаторно-курортные, оздоровительные организации России для работников, чей стаж работы в СТЦ более 1 года, имеющих детей в возрасте от 6,5 до 15 лет;
            \n•	Дополнительный оплачиваемый день отпуска 1 сентября для родителей первоклассника.''')

    elif message.text == '/gift':
       bot.send_message(message.chat.id,'''Дарение денжных средств предоставляется в следующих случаях:
            \n•	В связи с бракосочетанием (не более 35 000);
            \n•	К юбилейной дате (не более 25 000, от 50 лет);
            \n•	К 8 марта (не более 5 000).''')

    elif message.text == '/removal':
       bot.send_message(message.chat.id,'''СТЦ поддерживает сотрудников, переехавших для работы на предприятии из регионов России. Выплачивается компенсация: 
            \n•	100% стоимости транспортных расходов с территории проживания до расположения Предприятия (кроме бизнес-класса и СВ) сотруднику и членам х семей;
            \n•	Частичной стоимости (не более 20 000 рублей) в течение 2 первых месяцев работы на Предприятии при условии заключения договора аренды жилья работником.''')

    elif message.text == '/learning':
       bot.send_message(message.chat.id,'''СТЦ является заказчиком целевого обучения в лучших технических вузах РФ с последующим гарантированным трудоустройством в компании. 
        \nПомимо целевого обучения оплачиваем конференции и курсы для повышения квалификации сотрудников.''')


    elif message.text == '/bus':
        bot.send_photo(message.chat.id, open('venv/media/1.jpg', 'rb'))
        bot.send_photo(message.chat.id, open('venv/media/2.jpg', 'rb'))
        bot.send_photo(message.chat.id, open('venv/media/3.jpg', 'rb'))
        bot.send_photo(message.chat.id, open('venv/media/4.jpg', 'rb'))
        bot.send_photo(message.chat.id, open('venv/media/5.jpg', 'rb'))
        bot.send_document(message.chat.id, open('venv/media/расписание автобусов.docx', 'rb'))

if __name__ == '__main__':
    bot.infinity_polling()

